
<center>
<%= form_for @request, validate: true do |f| %>
<div class="field">
<%= f.label :subject%>
<%= f.select :subject , options_for_select([['Підключення Інтернету','new_client'],['Проблеми з інтернетом','old_client']])%>
</div>
<div class="field">
<%= f.label :client_id%>
<%= f.text_field :client_id %>
</div>
<div class="field">
<%= f.label :name%>
<%= f.text_field :name %>
</div>
<div class="field">
<%= f.label :phone%>
<%= f.text_field :phone %>
</div>
<div class="field">
<%= f.label :text%>
<%= f.text_area :text %>
</div>
<%= f.submit "Створити" %>
<% end %>
</center>
