<div class="central">


<% unless @request.read  %>
<div class="modal fade" id="afterCreate" tabindex="-1" role="dialog" aria-labelledby="afterCreateCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="afterCreateCenterTitle">Данні доступу </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Індифікатор (ID): <%= @request.id %></br>
        Ключ(Token): <%= @request.token %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
    $("#afterCreate").modal();
</script>
<%end%>

<h3>Заява №<%= @request.id %> <%= subject(@request.subject) %>   <%= color_stat(@request.stat) %></h3>
<p style="text-align:left; padding: 20px"><%= @request.text%></p>
<p class="text-secondary">Від <%=@request.created_at%></p>
<% if  @request.client_id%><p><b>Код клієнта: </b><%= @request.client_id%></p><%end%>
<% if  @request.phone%><p><b>Телефон: </b><%= @request.phone%></p><%end%>
<% if  @request.email%><p><b>Email: </b><%= @request.email%></p><%end%>
<hr>
Коментарі:

<%= render @request.comments %>

<%= render 'comments/form' %>
</div>
