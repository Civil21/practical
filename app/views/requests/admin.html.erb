<table class="table">
  <thead>
    <tr>
      <%['id','name','subject','stat','created_at'].each do |name|%>
      <th><%=link_to order_path(name), method: :put do %><%=name.upcase%> <%if session[:order_name]==name%><i class="<%if session[:order_type]=="DESC"%>fa fa-angle-up<%else%>fa fa-angle-down <%end%>"></i><%end%> <%end%></th>
      <%end%>
      <th>Last active</th>
    </tr>
  </thead>
  <tbody>
    <%=render @requests%>
  </tbody>
</table>
